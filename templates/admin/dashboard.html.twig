{% extends '@!EasyAdmin/page/content.html.twig' %}

{% block content_title %}Hello World!{% endblock %}

{% block main %}

    <div style="width: 300px; height: 400px;">
        <h3>Jeux</h3>
        <canvas id="module1" width="150" height="150"></canvas>
    </div>

    <div>
        <h3>Choisir un jeu</h3>
        <form method="post" action="{{ path('choisir_un_jeu') }}">
            <input type="number" name="joueurs" placeholder="Nombre de joueurs" min="1" required>
            <input type="submit">
        </form>
    </div>

{% endblock main %}


{% block body_javascript %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script>

        window.chartColors = {
            red:    'rgb(250,  104,  97)',
            orange: 'rgb(255, 159,  64)',
            yellow: 'rgb(255, 205,  86)',
            green:  'rgb( 27, 108, 165)',
            blue:   'rgb( 27, 108, 165)',
            purple: 'rgb(153, 102, 255)',
            grey:   'rgb(185, 187, 191)',
            aqua:	'rgb(0, 227, 222)'
        };

        function getRandomColor() {
            let letters = '0123456789ABCDEF';
            let color = '#';
            for (let i = 0; i < 6; i++) {
                color += letters[Math.floor(Math.random() * 16)];
            }
            return color;
        }

        let ctx1 = document.getElementById('module1').getContext('2d');
        let chart1 = new Chart(ctx1, {
            type: 'doughnut',
            data: {
                datasets: [{
                    data: [
                        {% for jeu in jeux %}
                        "{{ jeu.nbParties }}",
                        {% endfor %}
                    ],
                    backgroundColor: [
                        {% for jeu in jeux %}
                        getRandomColor(),
                        {% endfor %}
                    ],
                    borderWidth: 5,
                }],
                labels: [
                    {% for jeu in jeux %}
                    "{{ jeu.nom }}",
                    {% endfor %}
                ]
            },
            // Configuration options go here
            options: {
                title: {
                    display: false,
                    text: 'ImpayÃ©s',
                },
                legend: {
                    display: false,
                    position: 'bottom',
                    align: 'start',
                },
                tooltips: {
                    callbacks: {
                        title: function(tooltipItem, data) {
                            return data['labels'][tooltipItem[0]['index']];
                        },
                        label: function(tooltipItem, data) {
                            let dataset = data['datasets'][0];
                            let value = dataset['data'][tooltipItem['index']];
                            let percent = Math.round((value / dataset["_meta"][0]['total']) * 100);
                            return "" + value + ' (' + percent + '%)';
                        },
                    },
                },
            }
        });
    </script>

{% endblock body_javascript %}
